<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nightscout.android.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknown_values"
        android:id="@+id/sgValue"
        android:layout_alignParentLeft="false"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:singleLine="true"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_alignParentRight="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unknown_values"
        android:id="@+id/timeAgo"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:gravity="center|center_vertical|center_horizontal"
        android:singleLine="true"
        android:layout_alignTop="@+id/sgValue"
        android:layout_marginTop="70sp" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timeAgo"
        android:layout_alignRight="@+id/timeAgo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="45dp" />

    <TableLayout
        android:id="@+id/StatusBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ff006578">

        <TableRow
            android:id="@+id/StatusBarIconRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewUSB"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_usb_disconnected"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageViewUploadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewUSB"
                android:src="@drawable/ic_upload_fail"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewRcvrBattery"
                android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/imageViewUploadStatus"
                android:layout_column="3"
                android:layout_weight="1"
                android:src="@drawable/battery"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewTimeIndicator"
                android:layout_toRightOf="@+id/imageViewRcvrBattery"
                android:layout_column="4"
                android:layout_weight="1"
                android:src="@drawable/ic_clock_bad"
                android:layout_marginTop="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/StatusBarLabelsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="USB"
                android:id="@+id/USBLabel"
                android:layout_below="@+id/imageViewUSB"
                android:layout_alignLeft="@+id/imageViewUSB"
                android:textSize="8dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Upload"
                android:id="@+id/UploadLabel"
                android:layout_below="@+id/imageViewUploadStatus"
                android:layout_alignLeft="@+id/imageViewUploadStatus"
                android:autoText="false"
                android:minLines="1"
                android:textSize="8dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Dex Battery"
                android:id="@+id/BatteryLabel"
                android:layout_below="@+id/imageViewRcvrBattery"
                android:layout_alignLeft="@+id/imageViewRcvrBattery"
                android:textSize="8dp"
                android:layout_column="3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Time"
                android:id="@+id/TimeSyncLabel"
                android:layout_alignLeft="@+id/imageViewTimeIndicator"
                android:layout_below="@+id/imageViewTimeIndicator"
                android:textSize="8dp"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
