<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Nightscout.statusbar" parent="Nightscout">
        <item name="android:background">#ff006578</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Nightscout" parent="android:Theme.Material">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Nightscout.Light" parent="android:Theme.Material">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.TranslucentKitKatStatusBar">
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>
</resources>